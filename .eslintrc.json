{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard",
        "plugin:jsdoc/recommended",
        "plugin:mocha/recommended",
        "plugin:@fintechstudios/chai-as-promised/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "_": "readonly",
        "$": "readonly",
        "marked": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "always"]
    },
    "plugins": [
        "jsdoc",
        "mocha",
        "@fintechstudios/eslint-plugin-chai-as-promised"
    ]
}